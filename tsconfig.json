{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "allowJs": true
    },
    "exclude": [
    "node_modules",
    "client",
    "typings/index.d.ts",
    "typings/modules",
    "server",
    "systemjs.config.js"
    ],
    "typescript.tsdk": "node_modules/typescript/lib"
}
